<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_corners_radius"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="24dp">


    <AutoCompleteTextView
        android:id="@+id/atvCategories2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:dropDownHeight="wrap_content"
        android:hint="@string/edit_category_dialog_fragment_et_hint"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btEditCategoryCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="46dp"
        android:text="@string/edit_category_dialog_fragment_bt_add"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btEditCategoryDelete"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/atvCategories2" />

    <Button
        android:id="@+id/btEditCategoryCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_category_dialog_fragment_bt_cancel"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/btEditCategoryDelete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btEditCategoryDelete"
        app:layout_constraintTop_toTopOf="@+id/btEditCategoryDelete" />

    <Button
        android:id="@+id/btEditCategoryDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_category_dialog_fragment_bt_delete"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/btEditCategoryCreate"
        app:layout_constraintEnd_toStartOf="@+id/btEditCategoryCancel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btEditCategoryCreate"
        app:layout_constraintTop_toTopOf="@+id/btEditCategoryCreate" />


</androidx.constraintlayout.widget.ConstraintLayout>